# Server Configuration
PORT=3001                    # Port where the server will run
NODE_ENV=development         # Environment: development, staging, or production

# DynamoDB Configuration
DYNAMODB_TABLE=dev-task-management-tasks  # Name of the DynamoDB table
AWS_REGION=ap-southeast-2                 # AWS region (e.g., ap-southeast-2, us-east-1)

# Local DynamoDB Configuration (for development)
DYNAMODB_ENDPOINT=http://localhost:8000   # Local DynamoDB endpoint
AWS_ACCESS_KEY_ID=local                   # Local development access key
AWS_SECRET_ACCESS_KEY=local               # Local development secret key

# Logging Configuration
LOG_LEVEL=debug                           # Log level: debug, info, warn, error

# Security
CORS_ORIGIN=http://localhost:3000         # Frontend URL for CORS 